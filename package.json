{
  "name": "viron",
  "version": "0.0.1",
  "description": "Design-based Management Console.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cam-inc/viron.git"
  },
  "keywords": [
    "management",
    "console",
    "admin",
    "design",
    "swagger",
    "riot",
    "mdl"
  ],
  "author": "fkei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cam-inc/viron/issues"
  },
  "homepage": "https://github.com/cam-inc/viron#readme",
  "scripts": {
    "prepush": "npm run test",
    "start": "run-s build:clean build:prepare build:html build:swagger build:img build:font watch",
    "build": "run-s build:clean build:prepare build:html build:swagger build:img build:font build:js build:css",
    "build:clean": "rm -rf dist",
    "build:prepare": "mkdir -p dist && mkdir -p dist/js",
    "build:html": "pug public -O package.json --out dist",
    "build:swagger": "cp public/js/swagger-client.js dist/js/swagger-client.js",
    "build:img": "imagemin public/img/**/* --out-dir=dist/img",
    "build:font": "cp -r public/font dist/font",
    "build:js": "run-s build:js:bundle build:js:minify",
    "build:js:bundle": "rollup -c rollup.config.js",
    "build:js:minify": "uglifyjs dist/js/app.js -o dist/js/app.min.js --source-map url=app.min.js.map",
    "build:css": "run-s build:css:bundle build:css:minify",
    "build:css:bundle": "postcss src/css/app.pcss -o dist/css/app.css",
    "build:css:minify": "csswring dist/css/app.css dist/css/app.min.css",
    "watch": "run-p watch:js watch:css",
    "watch:js": "rollup -c rollup.local.config.js --watch",
    "watch:css": "watch 'npm run build:css' src/css",
    "test": "run-s format lint spec",
    "format": "run-p format:js format:css",
    "format:js": "echo format:js",
    "format:css": "stylefmt -c .stylefmtrc -r src/css/**/*.pcss",
    "lint": "run-p lint:js lint:css",
    "lint:js": "eslint src",
    "lint:css": "stylelint src/css/**/*.pcss",
    "spec": "mocha",
    "deploy:prd": "gh-pages -d dist --add",
    "deploy:stg": "gh-pages -d dist --add --dest stg",
    "deploy:dev": "gh-pages -d dist --add --dest dev",
    "release:prd": "run-s build deploy:prd",
    "release:stg": "run-s build deploy:stg",
    "release:dev": "run-s build deploy:dev",
    "nuc": "nuc -a"
  },
  "dependencies": {
    "bignumber.js": "^4.0.2",
    "content-disposition": "^0.5.2",
    "downloadjs": "1.4.4",
    "esr": "^0.9.2",
    "marked": "^0.3.6",
    "moment": "^2.18.1",
    "mout": "^1.0.0",
    "object-assign": "^4.1.1",
    "parchment": "^1.1.0",
    "pretty": "^2.0.0",
    "promise-polyfill": "^6.0.2",
    "qrious": "^4.0.2",
    "quill": "^1.3.1",
    "rfc-3986": "^1.0.1",
    "riot": ">=3.5.1",
    "riotx": "^0.9.4",
    "shortid": "^2.2.8",
    "store": "=1.3.20",
    "sua.js": "^2.1.0",
    "suitcss-base": "^3.0.0",
    "taucharts": "^1.1.3",
    "tinycolor2": "^1.4.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "csswring": "^6.0.0",
    "eslint": "^4.6.1",
    "gh-pages": "^1.0.0",
    "husky": "^0.13.4",
    "imagemin-cli": "^3.0.0",
    "mocha": "^3.4.2",
    "npm-check-updates": ">=2.8.8",
    "npm-run-all": "^4.0.2",
    "postcss-apply": "^0.7.0",
    "postcss-cli": "^4.0.0",
    "postcss-currentcolor": "0.0.2",
    "postcss-custom-properties": "^6.0.1",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-import": "^10.0.0",
    "postcss-nesting": "^4.0.1",
    "postcss-overflow-wrap": "0.0.1",
    "postcss-sorting": "^2.0.1",
    "pug": "^2.0.0-rc.1",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^0.49.3",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-riot": "^1.1.0",
    "rollup-plugin-server": "^0.7.0",
    "rollup-watch": "^4.3.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.10.1",
    "stylelint-suitcss": "^1.0.0",
    "uglify-es": "^3.0.15",
    "watch": "^1.0.2"
  }
}
