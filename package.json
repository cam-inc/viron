{
  "name": "viron",
  "version": "1.2.0",
  "description": "Design-based Management Console.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cam-inc/viron.git"
  },
  "keywords": [
    "management",
    "console",
    "admin",
    "design",
    "swagger",
    "riot",
    "mdl"
  ],
  "author": "fkei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cam-inc/viron/issues"
  },
  "homepage": "https://github.com/cam-inc/viron#readme",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "prepush": "npm run test",
    "start": "run-s build:clean build:prepare build:html build:swagger build:img build:font build:tinymce build:css watch",
    "build": "run-s build:clean build:prepare build:html build:swagger build:img build:font build:tinymce build:js build:css",
    "build:clean": "rm -rf dist",
    "build:prepare": "mkdir -p dist && mkdir -p dist/js && mkdir -p dist/tinymce",
    "build:html": "pug public -O package.json --out dist",
    "build:swagger": "cp public/js/swagger-client.js dist/js/swagger-client.js",
    "build:img": "imagemin public/img/**/* --out-dir=dist/img",
    "build:font": "cp -r public/font dist/font",
    "build:tinymce": "cp -r node_modules/tinymce/skins dist/tinymce/skins && cp -r node_modules/tinymce/themes dist/tinymce/themes",
    "build:js": "run-s build:js:bundle build:js:minify",
    "build:js:bundle": "rollup -c rollup.config.js",
    "build:js:minify": "uglifyjs dist/js/app.js --comments --mangle -o dist/js/app.min.js --source-map url=app.min.js.map",
    "build:css": "run-s build:css:bundle build:css:minify",
    "build:css:bundle": "postcss src/css/app.css -o dist/css/app.css",
    "build:css:minify": "csswring dist/css/app.css dist/css/app.min.css",
    "watch": "run-p watch:html watch:js watch:css",
    "watch:html": "chokidar 'public/*.pug' -c 'npm run build:html'",
    "watch:js": "rollup -c rollup.local.config.js --watch",
    "watch:css": "chokidar 'src/css/**/*.css' -c 'npm run build:css'",
    "test": "run-s format lint spec",
    "format": "run-p format:js format:css",
    "format:js": "echo format:js",
    "format:css": "stylefmt -c .stylefmtrc  -r 'src/css/**/!(Pagination).css'",
    "lint": "run-p lint:js lint:css",
    "lint:js": "eslint src",
    "lint:css": "stylelint src/css/**/*.css",
    "spec": "mocha",
    "deploy:beta": "node task/deploy.js -b",
    "deploy:latest": "node task/deploy.js",
    "release:beta": "run-s build deploy:beta",
    "release:latest": "run-s build deploy:latest",
    "ncu": "ncu"
  },
  "dependencies": {
    "bignumber.js": "^4.1.0",
    "clipboard-js": "^0.3.6",
    "content-disposition": "^0.5.2",
    "downloadjs": "1.4.4",
    "esr": "^0.9.2",
    "i18next": "^10.0.7",
    "i18next-browser-languagedetector": "^2.1.0",
    "moment": "^2.19.1",
    "mout": "^1.1.0",
    "object-assign": "^4.1.1",
    "pretty": "^2.0.0",
    "promise-polyfill": "^6.0.2",
    "qrcode": "^1.2.0",
    "rfc-3986": "^1.0.1",
    "riot": ">=3.7.4",
    "riotx": "^0.9.4",
    "shortid": "^2.2.8",
    "store": "=1.3.20",
    "sua.js": "^2.1.0",
    "taucharts": "^1.2.2",
    "tinycolor2": "^1.4.1",
    "tinymce": "^4.7.4",
    "valid-url": "^1.0.9",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "chokidar": "^2.0.0",
    "chokidar-cli": "^1.2.0",
    "commander": "^2.12.2",
    "csswring": "^6.0.1",
    "eslint": "^4.10.0",
    "gh-pages": "^1.0.0",
    "husky": "^0.14.3",
    "imagemin-cli": "^3.0.0",
    "mocha": "^4.0.1",
    "npm-check-updates": "^2.13.0",
    "npm-run-all": "^4.1.1",
    "postcss-apply": "^0.8.0",
    "postcss-cli": "^4.1.1",
    "postcss-currentcolor": "0.0.2",
    "postcss-custom-properties": "^6.2.0",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-import": "^11.0.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^2.1.2",
    "postcss-overflow-wrap": "0.0.1",
    "postcss-sorting": "^3.1.0",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^0.50.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-re": "^1.0.6",
    "rollup-plugin-riot": "^1.1.0",
    "rollup-plugin-server": "^0.7.0",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.2.0",
    "stylelint-suitcss": "^1.0.0",
    "suitcss-base": "^4.0.0",
    "uglify-es": "^3.1.8"
  }
}
