.Pug {
  display: block;
}

.Pug__tabs {
  @apply --layout-center-start;
  margin-bottom: 8px;
  border-bottom: 1px solid var(--color-bg-tertiary);
}

.Pug__tab {
  padding: 8px;
  cursor: pointer;
  border-bottom: 2px solid var(--color-bg-tertiary);
}

.Pug__tab:hover,
.Pug__tab.hover,
.Pug__tab--selected {
  color: var(--color-basic-skyblue);
  border-color: var(--color-basic-skyblue);
}

.Pug__tabs .Pug__tab {
  margin-right: 8px;
}

.Pug__tabs .Pug__tab:last-child {
  margin-right: 0;
}

.Pug__editor .Textarea {
  display: block;
}

.Pug__editor .Textarea__input {
  min-height: 400px;
}

.Pug__message {
  padding: 8px;
  margin-bottom: 8px;
  overflow: scroll;
  background-color: #fff;
  border-left: 2px solid #fff;
}

.Pug__message--success {
  border-left-color: var(--color-basic-skyblue);
}

.Pug__message--failed {
  border-left-color: var(--color-basic-red);
}
