.Textarea {
  display: inline-block;
}

.Textarea__label {
  padding-left: 8px;
  margin-bottom: 4px;
  font-size: 12px;
  border-left: 2px solid var(--color-bg-primary);
}

.Textarea__input {
  width: 100%;
  padding: 14px;
  font-size: 18px;
  resize: vertical;
  background-color: var(--color-basic-white);
  border: 1px solid var(--color-basic-gray);
  border-radius: 3px;
}
