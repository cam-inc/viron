.Switch {
  display: inline-block;
  cursor: pointer;
}

.Switch__label {
  padding-left: 8px;
  margin-bottom: 4px;
  font-size: 12px;
  border-left: 2px solid var(--color-bg-primary);
}

.Switch__groove {
  position: relative;
  width: 44px;
  height: 22px;
  user-select: none;
  background-color: var(--color-basic-gray);
  border: 1px solid transparent;
  border-radius: 20px;
  transition: background-color 0.36s;
}

.Switch__knob {
  position: absolute;
  top: 1px;
  left: 2px;
  width: 18px;
  height: 18px;
  background-color: var(--color-basic-white);
  border-radius: 50%;
  transition: left 0.36s cubic-bezier(0.78, 0.14, 0.15, 0.86);
}

.Switch__inner {
  position: absolute;
  top: 1px;
  width: 100%;
  padding: 0 7px;
  font-size: 12px;
  color: var(--color-basic-white);
  text-align: right;
}

.Switch--disabled .Switch__container {
  cursor: not-allowed;
}

.Switch--disabled .Switch__groove {
  background-color: var(--color-basic-lightGray);
}

.Switch--disabled .Switch__knob {
  background-color: var(--color-basic-gray);
}

.Switch--active:not(.Switch--disabled) .Switch__groove {
  background-color: var(--color-basic-skyblue);
}

.Switch--active:not(.Switch--disabled) .Switch__inner {
  text-align: left;
}

.Switch--active:not(.Switch--disabled) .Switch__knob {
  left: calc(100% - 20px);
}