/* Component = dmc.pages[x].components[x]のこと */
/* 紛らわしいので注意すること */
.Component {
  @apply --layout-column-stretch-center;
  max-width: 100%;
  padding: 24px;
  margin: 0 8px 8px 0;
  overflow: hidden;
  background-color: var(--color-base-white);
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
  transition-duration: 100ms;
  transition-property: box-shadow;/* need for FF */
}

.Component:hover,
.Component.hover {
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.5);
}

.Component__spinner {
  @apply --layout-center-center;
  height: 100%;
  font-size: 18px;
}

.Component__spinner .Icon {
  @apply --animation-spin;
}

.Component__head {
  padding-bottom: 8px;
  border-bottom: 1px solid var(--color-basic-black);
}

.Component__headBasic {
  @apply --layout-center-center;
}

.Component__name {
  flex-grow: 1;
  width: 0;
  font-size: 14px;
  font-weight: bold;
}

.Component__refresh,
.Component__search,
.Component__filter {
  @apply --layout-center-center;
  margin-left: 4px;
  font-size: 12px;
  cursor: pointer;
}

.Component__refresh.hover,
.Component__refresh:hover,
.Component__search:hover,
.Component__search.hover,
.Component__filter:hover,
.Component__filter.hover {
  color: var(--color-basic-gray);
}

.Component__search--active,
.Component__filter--active {
  color: var(--color-base-dodgerBlue);
}

.Component__headSearch {
  margin: 4px 4px 0 0;
  overflow: scroll;
  font-size: 10px;
  text-align: right;
  background-color: #fff;
}

.Component__body {
  flex-grow: 1;
  padding: 16px;
}

/* Safari v10以下ではflex_itemに対してheight:100%が効かないバグ有り。*/
/* Safari v11ではbugが解消されている。 */
/* Safari v11が正式リリースされるまでの一時対応として以下のスタイルを適用する。 */
.Component__body .graphical-report__layout {
  display: block;
}

.Component__body .ComponentTable {
  width: 100%;
}

.Component__alert {
  padding: 12px 0;
}

.Component__alertText {
  font-size: 12px;
  font-weight: bold;
  color: var(--color-basic-red);
}

.Component__pagination {
  margin-bottom: 8px;
}

.Component__pagination--tail {
  margin-top: 8px;
  margin-bottom: 0;
}

.Component__tail {
  @apply --layout-center-center;
  padding-top: 24px;
  border-top: 1px solid var(--color-basic-black);
}

.Component__action {
  position: relative;
  display: block;
}

.Component__tail .Component__action {
  margin-right: 8px;
}

.Component__tail .Component__action:last-child {
  margin-right: 0;
}

.Component__action .Button {
  display: block;
}

.ComponentSearch {
  display: block;
}

.ComponentSearch__body {
  min-width: 300px;
  margin-bottom: 32px;
}

.ComponentSearch__tail {
  @apply --layout-center-center;
}

.ComponentSearch__tail .Button {
  width: 120px;
}

.ComponentFilter {
  display: block;
}

.ComponentFilter__head {
  margin-bottom: 24px;
}

.ComponentFilter__title {
  margin-bottom: 8px;
  font-weight: bold;
}

.ComponentFilter__description {
  font-size: 10px;
}

.ComponentFilter__items {
  @apply --layout-start-start;
  flex-wrap: wrap;
  max-width: 300px;
  margin-bottom: 24px;
}

.ComponentFilter__item {
  display: inline-block;
  margin: 0 8px 8px 0;
}

.ComponentFilter__items .ComponentFilter__item:last-child {
  margin-right: 0;
}

.ComponentFilter__tail {
  @apply --layout-center-center;
}

.ComponentOperation {
  @apply --layout-column-stretch-center;
  height: 100%;
}

.ComponentOperation__head {
  flex-shrink: 0;
  padding: 24px;
  border-bottom: 2px solid var(--color-base-mineShaft);
}

.ComponentOperation__title {
  font-size: 14px;
  font-weight: bold;
}

.ComponentOperation__description {
  margin-top: 12px;
}

.ComponentOperation__body {
  flex-grow: 1;
  overflow-y: scroll;
}

.ComponentOperation__tail {
  @apply --layout-center-center;
  flex-shrink: 0;
  padding: 24px;
  border-top: 2px solid var(--color-base-mineShaft);
}

.ComponentOperation__tail .Button {
  min-width: 120px;
  margin-right: 12px;
}

.ComponentOperation__tail .Button:last-child {
  margin-right: 0;
}
