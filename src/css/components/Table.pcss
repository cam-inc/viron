.Table {
  display: block;
}

/* ============================== */
/* items */
/* ============================== */
.Table__items {
  display: block;
  padding: 8px;
  margin-bottom: 12px;
  background-color: var(--color-bg-tertiaryLight);
  border-radius: 4px;
}

.Table .Table__items:last-child {
  margin-bottom: 0;
}

.Table__itemsHeader {
  @apply --layout-center-center;
}

.Table__items--opened .Table__itemsHeader {
  margin-bottom: 8px;
}

.Table__itemsTitle {
  @apply --text-truncate;
  flex-grow: 1;
  font-weight: bold;
  cursor: pointer;
  user-select: none;
}

.Table__itemsTitle:hover,
.Table__itemsTitle.hover {
  opacity: 0.5;
}

.Table__itemsButton {
  @apply --layout-center-center;
  position: relative;
  flex-shrink: 0;
  width: 18px;
  height: 18px;
  margin-left: 4px;
  font-size: 14px;
  cursor: pointer;
  background-color: #fff;
  border-radius: 2px;
}

.Table__itemsButton:hover .Icon,
.Table__itemsButton.hover .Icon {
  opacity: 0.5;
}

.Table__itemsButton .Tooltip {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  margin: 0 auto;
}

/* TODO: テキストが縦に伸びるbug有り。下記は暫定対応。後で修正したい。 */
.Table__itemsButton .Tooltip__text {
  width: 150px;
}

.Table__itemsOpenShutButton .Icon {
  transition-duration: 100ms;
  transition-property: transform;
}

.Table__items--opened .Table__itemsOpenShutButton .Icon {
  transform: rotate(180deg);
}

.Table__itemsButtonCatcher {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

/* ============================== */
/* item */
/* ============================== */

.Table__itemsContent {
  @apply --layout-stretch-start;
  overflow-x: scroll;
}

.Table__item {
  display: block;
  flex-shrink: 0;
  padding: 8px;
  margin-right: 4px;
  cursor: pointer;
  background-color: #fff;
  border-right: 2px solid var(--color-bg-tertiary);
  border-left: 2px solid var(--color-bg-tertiary);
}

.Table__item:hover,
.Table__item.hover {
  border-color: var(--color-base-dodgerBlue);
}

.Table__itemsContent .Table__item:last-child {
  margin-right: 0;
}

.Table__itemHeader {
  @apply --layout-center-center;
  margin-bottom: 4px;
}

.Table__itemTitle {
  flex-grow: 1;
  flex-shrink: 0;
  margin-right: 4px;
  font-weight: bold;
}

.Table__itemType {
  flex-shrink: 0;
  color: var(--color-bg-secondary);
}

.Table__cell {
  display: block;
}

.Table__cellButton:hover,
.Table__cellButton.hover {
  opacity: 0.5;
}

.Table__cellImage {
  width: 100px;
  height: 100px;
  padding: 8px;
  background-color: #fff;
  border: 1px solid var(--color-bg-tertiaryLight);
}

.Table__cellImage div {
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

/* ============================== */
/* filter */
/* ============================== */
.Table__filter {
  display: block;
}

.Table__filter .Checkbox {
  display: block;
  margin-bottom: 8px;
}

.Table__filter .Checkbox:last-child {
  margin-bottom: 0;
}
